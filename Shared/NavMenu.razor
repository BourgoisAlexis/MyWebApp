@using BlazorApp1.Models;

<nav class="navbar navbar-expand-lg h-100 w-100 align-content-center" style="color:@AppModel.color">
    <ul class="navbar-nav nav-fill w-100">
        @for (int i = 0; i < _infos.Length; i++) {
            int index = i;
            <li class="nav-item">
                <NavLink class="nav-link" style="font-size:1.5em" @onclick=@(() => { AppModel.loading = true;}) href="@_infos[index].id" Match="NavLinkMatch.All">
                    <i class=@_infos[index].icon style="font-size:inherit; color:inherit"></i>
                    @_infos[index].name
                </NavLink>
            </li>
        }
    </ul>
</nav>



@code {
    #region Variables
    private string _appName = "MyApp";
    private PageInfos[] _infos = new PageInfos[] { };
    #endregion

    protected override Task OnInitializedAsync() {
        _infos = new PageInfos[] {
            new PageInfos("", "Home", "bi-house"),
            //new PageInfos("Calculator", "Calculator", "bi-calculator"),
            //new PageInfos("Folio", "Folio", "bi-archive"),
            new PageInfos("Spotify", "Spotify", "bi-speaker"),
            //new PageInfos("Test", "Test", "bi-backpack"),
            //new PageInfos("ToDoList", "ToDoList", "bi-check-square"),
            new PageInfos("Test", "TimeTracker", "bi-calendar"),
            //new PageInfos("Wordle", "Wordle", "bi-clipboard"),
    };

        return base.OnInitializedAsync();
    }
}

<style>
    .navbar-nav .nav-item .nav-link {
        color: @AppModel.colorTint;
    }

    .navbar-nav .nav-item:focus .nav-link,
    .navbar-nav .nav-item:hover .nav-link {
        color: @AppModel.light;
    }

    .navbar-nav .nav-item .nav-link.active {
        color: @AppModel.light;
        font-weight: bold;
        transition-duration: @(AppModel.duration);
        transition-property: font-weight, color;
    }
</style>
